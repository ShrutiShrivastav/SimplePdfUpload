<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="0dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_marginTop="21dp"
            android:id="@+id/selectFile"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/background_solid"
            android:layout_marginStart="100dp"
            android:text="Choose file "
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:id="@+id/showFile"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/background"
            android:paddingLeft="29dp"
            android:textSize="17dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/nunito"
                android:text="Upload date *"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/uploadDate"
                android:layout_width="135dp"
                android:layout_height="48dp"
                android:layout_below="@+id/textView66"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:ems="10"
                android:background="@drawable/background"
                />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="46dp"
                android:fontFamily="@font/nunito"
                android:text="Edited date *"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDate"
                android:layout_width="145dp"
                android:layout_height="48dp"
                android:layout_below="@+id/textView66"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="29dp"
                android:layout_toEndOf="@+id/uploadDate"
                android:background="@drawable/background"
                android:ems="10"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

        </RelativeLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:ems="10"
                android:id="@+id/upload"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Upload"
                android:textAllCaps="false"
                android:background="@drawable/background_solid"
                android:textSize="20sp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>